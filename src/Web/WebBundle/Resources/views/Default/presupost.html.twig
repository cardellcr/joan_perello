{% block content %}																							
	<form action="{{ path('new_message') }}" method="post" {{ form_enctype(form) }}>
            <div id="presupost_left">
                <div>{{ form_label(form.name) }}:</div><div>{{ form_widget(form.name) }}</div>
                <div>{{ form_label(form.telefon) }}:</div><div>{{ form_widget(form.telefon) }}</div>
                <div>{{ form_label(form.mail) }}:</div><div>{{ form_widget(form.mail) }}</div>
            </div>
            <div id="presupost_right">
		<div>{{ form_label(form.description) }}:</div>{{ form_widget(form.description) }}
            </div>
		<input type="submit" />
	</form>
        <div class="telefon"><img height="22px" src="{{ asset('bundles/webweb/images/phone.png') }}"/> 600 600 600 (Joan)</div>
{% endblock %}


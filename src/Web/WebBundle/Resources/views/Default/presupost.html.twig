{% block menu %} 
    <div class="menu">
       <a href="{{ path('index') }}">{% trans %}Index{% endtrans %}</a>
       <a href="{{ path('qui_som') }}">{% trans %}Qui som{% endtrans %}</a>
       <a href="{{ path('feines') }}">{% trans %}Feines{% endtrans %}</a>
       <a class="active" href="{{ path('presupost') }}">{% trans %}Presupost{% endtrans %}</a>
